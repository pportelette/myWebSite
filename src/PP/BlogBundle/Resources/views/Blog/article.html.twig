{% extends "@PPCore//layout.html.twig" %}

{% block title %}{{ parent() }} - Article{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/ppcore/css/styleCore.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/ppblog/css/styleBlog.css') }}">
{% endblock %}

{% block body %}
    <section class="col-xs-10 col-md-9 mainSection">
        <h3 class="title">{{ article.title}}</h3>
        <p class="fontOrange">{{ article.createdAt|date('d/m/Y') }}</p>
        <div class="col-md-12 article">
        {# ARTICLE #}
            <div class="">
                {{ article.content|raw }}
            </div>
        {# COMMENTS #}
            <p class="articleTitle marginTop marginBottom">Leave a message</p>
            {{ include("@PPBlog/Blog/commentForm.html.twig") }}
            {% for comment in listComments %}
            <div class="borderAside">
                <p class="articleTitle marginTop">{{ comment.username }}</p>
                <p class="fontOrange marginBottom">{{ comment.date|date('d/m/Y H:i') }}
                <p class="marginBottom">{{ comment.content }}</p>
            </div>
            {% endfor %}
        </div>
    </section>
